<Window x:Class="ZhiganshinaMilana420_MarryMe.Windows.AssignManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Windows"
        mc:Ignorable="d"
        Title="Назначение менеджера" 
        Height="650" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#909478"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7a8064"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="CancelButton" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="Foreground" Value="#909478"/>
            <Setter Property="BorderBrush" Value="#909478"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Border" x:Key="CardBorder">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#EEEFEA">
        <Border Style="{StaticResource CardBorder}" 
                Margin="20" 
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" 
                           Text="Назначение менеджера для пары"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#909478"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Информация о паре -->
                <Border Grid.Row="1" 
                        Style="{StaticResource CardBorder}"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="{Binding CoupleInfo}" 
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Выбор менеджера -->
                <StackPanel Grid.Row="1" 
                            Orientation="Vertical"
                            VerticalAlignment="Center">
                    <ListView x:Name="ManagersLv"
                              Width="500"
                              Height="400"
                              d:ItemsSource="{d:SampleData ItemCount=5}"
                              SelectedValuePath="Id"
                              BorderThickness="0"
                              Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardBorder}" 
                                        Padding="10"
                                        Width="460">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Width="50"
                                                 Height="50"
                                                 Grid.Column="0"
                                                 Margin="5 0 10 0"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Photo}"
                                                            Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <StackPanel Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Margin="20 0 0 0">
                                            <StackPanel Orientation="Horizontal"
                                                        >
                                                <TextBlock Text="{Binding Surname}"
                                                           FontSize="15"
                                                           Margin="0 5 0 0"/>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           Margin="5 5 0 0"/>
                                                <TextBlock Text="{Binding Patronymic}"
                                                           FontSize="15"
                                                           Margin="5 5 0 0"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Role.Name}"
                                                       FontSize="14"
                                                       Foreground="#909478"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button x:Name="CancelBtn"
                            Content="Отмена"
                            Style="{StaticResource CancelButton}"
                            Width="120"
                            Click="CancelBtn_Click"/>

                    <Button x:Name="AssignBtn"
                            Content="Назначить"
                            Click="AssignBtn_Click"
                            Style="{StaticResource ActionButton}"
                            Width="120"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
