<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.HostFolder.AddHostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages.HostFolder"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="Добавление ведущего"
      FontFamily="Segoe UI Light">

    <Grid Background="#FFF9FB">
        <!-- Фон с градиентом и легким узором -->
        <Rectangle Fill="#FFF9FB"/>
        <Path Data="M0,0 L1445,0 1445,750 Q722,850 0,750 Z" 
               Fill="#909478" Opacity="0.05" Stretch="Fill"/>

        <!-- Левая панель формы -->
        <Border Width="570"
                BorderBrush="#909478"
                BorderThickness="3"
                CornerRadius="20"
                Background="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="600"
                Margin="30 30 0 0"
                Effect="{StaticResource MaterialDesignShadowDepth1}">

            <StackPanel Orientation="Vertical"
                        Margin="30 30 30 30">
                <!-- Фамилия -->
                <TextBox x:Name="SurnameTb"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="16"
                         Width="500"
                         Margin="0 0 0 0"
                         materialDesign:HintAssist.Hint="Фамилия"
                         TextChanged="SurnameTb_TextChanged"/>

                <!-- Имя -->
                <TextBox x:Name="NameTb"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="16"
                         Width="500"
                         Margin="0 20 0 0"
                         materialDesign:HintAssist.Hint="Имя"
                         TextChanged="NameTb_TextChanged"/>

                <!-- Отчество -->
                <TextBox x:Name="PatronymicTb"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="16"
                         Width="500"
                         Margin="0 20 0 0"
                         materialDesign:HintAssist.Hint="Отчество"
                         TextChanged="PatronymicTb_TextChanged"/>

                <!-- Цена -->
                <TextBox x:Name="PriceTb"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="16"
                         Width="500"
                         Margin="0 20 0 0"
                         materialDesign:HintAssist.Hint="Цена ведущего"
                         TextChanged="PriceTb_TextChanged"/>

                <!-- Описание -->
                <TextBox x:Name="DescriptionTb"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="16"
                         Width="500"
                         Height="150"
                         Margin="0 20 0 0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"
                         materialDesign:HintAssist.Hint="Описание"
                         SpellCheck.IsEnabled="True"
                         Language="ru-RU"
                         TextChanged="DescriptionTb_TextChanged"/>

                <!-- Кнопка добавления -->
                <Button x:Name="AddBt"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        FontSize="18"
                        Width="200"
                        Height="40"
                        Content="Добавить"
                        HorizontalAlignment="Right"
                        Margin="0 20 10 0"
                        Click="AddBt_Click"/>
            </StackPanel>
        </Border>

        <!-- Правая панель с фотографиями -->
        <Border Width="710"
                Height="700"
                CornerRadius="20"
                Background="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 30 30 0"
                Effect="{StaticResource MaterialDesignShadowDepth1}">
            <StackPanel>
                <!-- Заголовок галереи -->
                <TextBlock Text="Фотографии ведущего"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="20 20 20 10"
                           HorizontalAlignment="Center"/>

                <!-- Основное фото -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 20">
                    <Image x:Name="TestImg"
                           Width="200" 
                           Height="200"
                           Stretch="Uniform"/>
                    <Button x:Name="changeBtn"
                            Content="+ фото"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            FontSize="16"
                            Height="40"
                            Width="120" 
                            Margin="20 0 0 0"
                            Click="changeBtn_Click"/>
                </StackPanel>

                <!-- Список фотографий -->
                <ListView x:Name="PhotosLv" 
                          Height="350"
                          Margin="20 0 20 20"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#909478"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                <StackPanel>
                                    <Image Source="{Binding Photo}" 
                                           Width="180" 
                                           Height="180"
                                           Stretch="Uniform"/>
                                    <Button Content="Удалить" 
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Margin="0 5 0 0"
                                            Padding="5"
                                            Tag="{Binding Id}"
                                            Click="DeletePhoto_Click"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Прогресс бар -->
                <ProgressBar x:Name="UploadProgress" 
                             Minimum="0" 
                             Maximum="100" 
                             Height="10"
                             Margin="20 10 20 20"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Кнопки управления фотографиями -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 20">
                    <Button Content="Выбрать фото" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#909478"
                            BorderBrush="#909478"
                            Width="200"
                            FontSize="16"
                            Height="40"
                            Margin="0 0 20 0"
                            Click="SelectPhotos_Click"/>
                    <Button Content="Сохранить" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#909478"
                            BorderBrush="#909478"
                            Width="200"
                            FontSize="16"
                            Height="40"
                            Click="UploadPhotos_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Кнопка назад -->
        <Button x:Name="ExitBt"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Width="120"
                Height="40"
                Background="#efefef"
                BorderBrush="#909478"
                Foreground="#909478"
                FontSize="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="50 0 0 30"
                Content="Назад" 
                Click="ExitBt_Click"/>
    </Grid>
</Page>