<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.HostFolder.CardHostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages.HostFolder"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="Просмотр ведущего"
      FontFamily="Segoe UI Light">

    <Grid Background="#FFF9FB">
        <!-- Фон с градиентом и легким узором -->
        <Rectangle Fill="#FFF9FB"/>
        <Path Data="M0,0 L1445,0 1445,750 Q722,850 0,750 Z" 
               Fill="#909478" Opacity="0.05" Stretch="Fill"/>

        <!-- Основной контейнер -->
        <Grid>
            <!-- Левая часть - изображение -->
            <Border Width="730"
                    Height="700"
                    CornerRadius="20"
                    Background="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="30 30 0 0"
                    Effect="{StaticResource MaterialDesignShadowDepth2}">
                <Grid>
                    <Image x:Name="CurrentImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxWidth="700"
                           MaxHeight="600"/>

                    <!-- Кнопки навигации по фото -->
                    <Button x:Name="PrevPhotoButton"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Content="{materialDesign:PackIcon Kind=ChevronLeft}"
                            Width="50"
                            Height="50"
                            Background="#909478"
                            BorderBrush="#909478"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="20 0 0 0"
                            Click="PrevPhoto_Click"
                            ToolTip="Предыдущее фото"/>

                    <Button x:Name="NextPhotoButton"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Content="{materialDesign:PackIcon Kind=ChevronRight}"
                            Width="50"
                            Height="50"
                            Background="#909478"
                            BorderBrush="#909478"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 20 0"
                            Click="NextPhoto_Click"
                            ToolTip="Следующее фото"/>

                    <TextBlock x:Name="PhotoCounter"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0 0 0 20"
                               FontSize="20"
                               Foreground="#909478"/>
                </Grid>
            </Border>

            <!-- Правая часть - информация -->
            <Border Width="600"
                    Height="700"
                    CornerRadius="20"
                    Background="White"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 30 30 0"
                    Effect="{StaticResource MaterialDesignShadowDepth2}">
                <StackPanel Margin="30">
                    <!-- ФИО -->
                    <TextBlock x:Name="NameTb"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#909478"
                               TextWrapping="Wrap"
                               Margin="0 0 0 20"/>

                    <!-- Описание -->
                    <TextBox x:Name="DescriptionTb"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="15"
                             Height="400"
                             Margin="0 0 0 20"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             BorderThickness="1"/>

                    <!-- Цена -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0 20 0 0">
                        <TextBlock Text="Стоимость брони ведущего:"
                                   FontSize="20"
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="PriceTb"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Width="150"
                                 Margin="10 0 0 0"
                                 IsReadOnly="True"
                                 BorderThickness="1"
                                 Foreground="#909478"/>
                        <TextBlock Text="руб."
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="5 0 0 0"/>
                    </StackPanel>

                    <!-- Кнопки действий -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0 30 0 0">
                        <Button x:Name="ExitBt"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="150"
                                Height="40"
                                Content="Назад"
                                Margin="0 0 20 0"
                                Click="ExitBt_Click"/>

                        <Button x:Name="ToBookBtt"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#909478"
                                BorderBrush="#909478"
                                Width="150"
                                Height="40"
                                Content="Выбрать"
                                Click="ToBookBtt_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>