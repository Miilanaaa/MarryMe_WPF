<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.RestaurantForder.RestaurantEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages.RestaurantForder"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="Редактирование ресторана"
      FontFamily="Segoe UI Light">

    <Grid Background="#FFF9FB">
        <!-- Фон с градиентом и легким узором -->
        <Rectangle Fill="#FFF9FB"/>
        <Path Data="M0,0 L1445,0 1445,750 Q722,850 0,750 Z" 
               Fill="#909478" Opacity="0.05" Stretch="Fill"/>

        <!-- Левая панель формы -->
        <Border Width="570"
                BorderBrush="#909478"
                BorderThickness="3"
                CornerRadius="20"
                Background="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="520"
                Margin="30 30 0 0"
                Effect="{StaticResource MaterialDesignShadowDepth1}">

            <StackPanel Orientation="Vertical"
                        Margin="30 30 30 30">
                <!-- Название -->
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBox x:Name="NameTb"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="13"
                             Height="50"
                             Width="350"
                             Margin="15 0 0 0"
                             materialDesign:HintAssist.Hint="Название ресторана"
                             TextChanged="NameTb_TextChanged"/>
                </StackPanel>

                <!-- Адрес -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0 20 0 0">
                    <TextBox x:Name="AddressTb"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Width="350"
                             FontSize="13"
                             Height="50"
                             Margin="15 0 0 0"
                             materialDesign:HintAssist.Hint="Адрес"
                             TextChanged="AddressTb_TextChanged"/>
                </StackPanel>

                <!-- Цена -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0 20 0 0">
                    <TextBox x:Name="PriceTb"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Width="350"
                             FontSize="13"
                             Height="50"
                             Margin="15 0 0 0"
                             materialDesign:HintAssist.Hint="Цена аренды"
                             TextChanged="PriceTb_TextChanged"/>
                </StackPanel>

                <!-- Тип и Вместимость -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0 20 0 0">
                    <ComboBox x:Name="TypeTb"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              FontSize="13"
                              Height="50"
                              Width="170"
                              materialDesign:HintAssist.Hint="Тип"
                              Margin="15 0 0 0"
                              ItemsSource="{Binding restaurantTypes}"
                              DisplayMemberPath="Name"
                              SelectionChanged="TypeTb_SelectionChanged"/>

                    <TextBox x:Name="CapacityTb"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Width="170"
                             FontSize="13"
                             Height="50"
                             Margin="10 0 0 0"
                             materialDesign:HintAssist.Hint="Вместимость"
                             TextChanged="CapacityTb_TextChanged"/>
                </StackPanel>

                <!-- Описание -->
                <TextBox x:Name="DescriptionTb"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="13"
                         Width="480"
                         Height="180"
                         Margin="5 10 0 0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"
                         materialDesign:HintAssist.Hint="Описание"
                         SpellCheck.IsEnabled="True"
                         Language="ru-RU"
                         TextChanged="DescriptionTb_TextChanged"/>

                <!-- Кнопка сохранения -->
                <Button x:Name="SaveBt"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        FontSize="18"
                        Width="200"
                        Height="40"
                        Content="Сохранить"
                        HorizontalAlignment="Right"
                        Margin="0 20 10 0"
                        Click="SaveBt_Click"/>
            </StackPanel>
        </Border>

        <!-- Правая панель с фотографиями -->
        <Border Width="710"
                Height="700"
                CornerRadius="20"
                Background="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 30 30 0"
                Effect="{StaticResource MaterialDesignShadowDepth1}">
            <StackPanel>
                <!-- Заголовок галереи -->
                <TextBlock Text="Фотографии ресторана"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="20 20 20 10"
                           HorizontalAlignment="Center"/>

                <!-- Список фотографий -->
                <ListView x:Name="PhotosLv" 
                          Height="510"
                          d:ItemsSource="{d:SampleData ItemCount=25}"
                          Margin="20 0 20 20"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#909478"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                <StackPanel>
                                    <Image Source="{Binding Photo}" 
                                           Width="200" 
                                           Height="200"
                                           Stretch="Uniform"/>
                                    <Button Content="Удалить" 
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Margin="0 5 0 0"
                                            Padding="5"
                                            Tag="{Binding Id}"
                                            Click="DeletePhoto_Click"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Прогресс бар -->
                <ProgressBar x:Name="UploadProgress" 
                             Minimum="0" 
                             Maximum="100" 
                             Height="10"
                             Margin="20 10 20 20"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Кнопки управления фотографиями -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 20">
                    <Button Content="Выбрать фото" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#909478"
                            BorderBrush="#909478"
                            Width="200"
                            FontSize="16"
                            Height="40"
                            Margin="0 0 20 0"
                            Click="SelectPhotos_Click"/>
                    <Button Content="Сохранить фото" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                             Background="#909478"
                            BorderBrush="#909478"
                            Width="200"
                            FontSize="16"
                            Height="40"
                            Click="UploadPhotos_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Меню -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="50 0 0 120">
            <Button x:Name="AddMenuBt"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#909478"
                    BorderBrush="#909478"
                    Width="150"
                    FontSize="16"
                    Height="40"
                    Content="+ Меню"
                    Click="AddMenuBt_Click"/>
            <Border BorderBrush="#909478" 
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="20 0 0 0"
                    Padding="10"
                    Visibility="Collapsed"
                    x:Name="MenuDocumentBorder">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/menu.png" 
                           Width="30" 
                           Height="30"
                           Margin="0 0 10 0"/>
                    <TextBlock x:Name="MenuDocumentTb" 
                               Text="Меню ресторана"
                               FontSize="18"
                               VerticalAlignment="Center"/>
                    <Button Content="Открыть"
                            Margin="10 0 0 0"
                            Padding="5"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="OpenMenuDocument_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Кнопка назад -->
        <Button x:Name="ExitBt"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Width="120"
                Height="40"
                Background="#efefef"
                BorderBrush="#909478"
                Foreground="#909478"
                FontSize="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="50 0 0 30"
                Content="Назад" 
                Click="ExitBt_Click"/>
    </Grid>
</Page>