<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.СoupleСardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="СoupleСardPage">

    <Grid Background="#EEEFEA">
        <!-- Header Section -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with title and buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
            <TextBlock Text="Карточка пары"
                       FontWeight="Bold"
                       Foreground="#909478"
                       FontSize="30"
                       VerticalAlignment="Center"/>

            <Button x:Name="ExitBt"
                    FontSize="20"
                    Width="150"
                    Height="45"
                    Content="Назад"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="20 0 0 0" 
                    Click="ExitBt_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="White"
                    Foreground="#909478"
                    BorderBrush="#909478"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Couple Info -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="10"
                    BorderBrush="#909478"
                    BorderThickness="2"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Жених"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 5"/>
                    <TextBox x:Name="NameGroomTb"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               FontSize="16"
                               Margin="0 0 0 15"/>

                    <TextBlock Text="Невеста"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 5"/>
                    <TextBox x:Name="NameBrideTb"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               FontSize="16"
                               Margin="0 0 0 15"/>

                    <TextBlock Text="Дата мероприятия"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 5"/>
                    <DatePicker x:Name="WeddingDateTb"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                FontSize="16"
                                Margin="0 0 0 15"/>

                    <TextBlock Text="Желаемый бюджет"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 5"/>
                    <TextBox x:Name="WeddingBudgetTb"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               FontSize="16"
                               Margin="0 0 0 15"/>


                    <TextBlock Text="Количество гостей"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 5"/>
                    <TextBox x:Name="NumberGuestsTb"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               FontSize="16"/>
                </StackPanel>
            </Border>

            <!-- Right Panel - Services List -->
            <Border Grid.Column="1"
                    Margin="20 0 0 0"
                    Background="White"
                    CornerRadius="10"
                    BorderBrush="#909478"
                    BorderThickness="2"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Services Header -->
                    <TextBlock Text="Выбранные услуги"
                               FontSize="25"
                               FontWeight="Bold"
                               Foreground="#909478"
                               Margin="0 0 0 15"/>

                    <!-- Services List -->
                    <ListView x:Name="FavoritClientLv"
                              Grid.Row="1"
                              d:ItemsSource="{d:SampleData ItemCount=2}"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0 5 0 5"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#909478"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="10"
                                        Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="200"/>
                                        </Grid.ColumnDefinitions>


                                        <TextBlock Text="{Binding Number}" 
                                                   Grid.Column="0"
                                                   HorizontalAlignment="Center" Width="auto"/>
                                        <TextBlock Text="{Binding Category}" 
                                                   Grid.Column="1"/>
                                        <TextBlock Text="{Binding Id}" 
                                                   Grid.Column="2"/>
                                        <TextBlock Text="{Binding Price}" 
                                                   Grid.Column="3"/>
                                        <TextBlock Text="{Binding Date}" 
                                                   Grid.Column="4"/>

                                        <!-- Action Buttons - Fixed Position -->
                                        <StackPanel Grid.Column="5"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <Button Content="Выбрать"
                                                    Width="90"
                                                    Click="SelectCategory_Click"
                                                    Tag="{Binding Number}"
                                                    Margin="0 0 10 0"
                                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                                    Background="#909478"
                                                    Foreground="White"
                                                    BorderBrush="#909478"
                                                    Visibility="{Binding SelectButtonVisibility}"/>

                                            <Button Content="Отменить"
                                                    Width="100"
                                                    Click="CancelSelection_Click"
                                                    Tag="{Binding Number}"
                                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                                    Background="#D9534F"
                                                    Foreground="White"
                                                    BorderBrush="#D9534F"
                                                    Visibility="{Binding CancelButtonVisibility}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Bottom Panel - Total and Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0 20 0 0">
                        <TextBlock Text="Итого:"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="0 0 10 0"/>
                        <TextBlock x:Name="FinalPriceTb"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="0 0 20 0"
                                   Width="120"/>


                        <Button x:Name="SeatingNavigateBt"
                                FontSize="16"
                                Width="150"
                                Height="40"
                                Content="Рассадка"
                                Margin="0 0 10 0"
                                Click="SeatingNavigateBt_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#909478"
                                Foreground="White"/>

                        <Button x:Name="GenerateContractBt"
                                FontSize="16"
                                Width="180"
                                Height="40"
                                Content="Создать договор"
                                Click="GenerateContractBt_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#909478"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
